<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitive_screen_main"
    >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vtl_main"
        layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/stl_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_one="@drawable/ic_baseline_text_snippet_24"
        app:icon_three="@drawable/ic_baseline_settings_applications_24"
        app:icon_two="@drawable/ic_baseline_monetization_on_24"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:layout_scrollFlags="scroll|enterAlways"
        app:number_of_tabs="three"
        app:starting_position="two"
        app:tab_color="@color/xanhdam"
        app:text_color="@color/vang"
        app:text_one="@string/news_tab_layout"
        app:text_three="@string/setting_tab_layout"
        app:text_two="@string/cryto_tab_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>