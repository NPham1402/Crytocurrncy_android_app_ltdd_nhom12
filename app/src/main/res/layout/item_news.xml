<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:paddingBottom="8dp"
    android:layout_marginBottom="5sp"
    tools:layout_marginTop="100dp"
    android:backgroundTint="@color/xanhdam"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_sysbol_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="0.5"
            android:textColor="@color/xam"
            android:textSize="@dimen/small_text"
            android:textStyle="italic"
            tools:text="Stock market rises!"

            />

        <TextView
            android:id="@+id/tv_date_public"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:textColor="@color/xam"
            android:textSize="@dimen/small_text"
            tools:text="January 5th"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/large_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/vang"
        tools:text="Stock market rises!"
        />

    <TextView
        android:id="@+id/news_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text"
        tools:text="Lorem ipsum"
        />

</LinearLayout>