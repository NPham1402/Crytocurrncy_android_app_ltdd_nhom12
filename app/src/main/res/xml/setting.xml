<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:icon="@drawable/ic_baseline_circle_notifications_24"
        android:textColor="#00796B"
        android:title="Text"
        tools:ignore="TextContrastCheck">
        <ListPreference
            android:defaultValue="Bình thường"
            android:entries="@array/co_chu"
            app:useSimpleSummaryProvider="true"
            android:entryValues="@array/co_chu_values"
            android:key="co_chu"
            android:title="Cỡ chữ" />
        <ListPreference
            android:defaultValue="Tiếng Việt"
            android:entries="@array/ngon_ngu"
            android:entryValues="@array/ngon_ngu_values"
            android:title="Ngôn ngữ" />
    </PreferenceCategory>
    <PreferenceCategory
        android:icon="@drawable/ic_baseline_circle_notifications_24"
        android:textColor="#00796B"
        android:title="Thông báo"
        tools:ignore="TextContrastCheck">
        <SwitchPreference
            android:key="turn_on_notification"
            android:summary="Bật thông báo"
            android:summaryOff="Tắt thông báo"
            android:title="Bật" />
        <ListPreference
            android:defaultValue=""
            android:key="time_notification"
            android:title="Thời gian gửi thông " />

    </PreferenceCategory>
    <ListPreference
        android:key="dark_mode"
        android:title="Chế độ tối"
        android:defaultValue="Theo hệ thống"
        android:entries="@array/dark_mode"
        android:entryValues="@array/dark_mode_values"/>

</PreferenceScreen>